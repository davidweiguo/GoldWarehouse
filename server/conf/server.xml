<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <context:annotation-config/>
    <bean id="server" class="com.goldwarehouse.server.Server"></bean>

    <bean id="systemInfo" class="com.goldwarehouse.common.SystemInfo">
        <property name="env">
            <value>Test</value>
        </property>
        <property name="category">
            <value>EB</value>
        </property>
        <property name="id">
            <value>S1</value>
        </property>
    </bean>

    <bean id="transportService" class="com.goldwarehouse.transport.activemq.ActiveMQObjectService">
        <property name="url" value="nio://localHost:61616?wireFormat.maxInactivityDuration=0"/>
        <property name="memoryLimit" value="268435456"/>
    </bean>

    <bean id="eventManager" class="com.goldwarehouse.common.event.RemoteEventManager">
        <constructor-arg>
            <ref bean="transportService"/>
        </constructor-arg>
        <property name="embedBroker" value="true"/>
    </bean>

    <bean id="scheduleManager" class="com.goldwarehouse.common.event.ScheduleManager"/>
</beans>
